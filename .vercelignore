# Ignore files that shouldn't be deployed to Vercel

# Dependencies
node_modules

# Development files
.env
.env.*
!.env.example

# Build artifacts (will be rebuilt)
# Note: Excluding 'build' but NOT excluding root 'api/' directory
# Vercel needs 'api/' at root for serverless function detection
# Exclude specific build subdirectories but allow root api/ to be deployed
build/client
build/server
.react-router

# Shopify development files
.shopify
.shopify.lock

# IDE files
.vscode
.idea
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Testing
coverage
.nyc_output

# Prisma dev database
prisma/dev.sqlite
prisma/dev.sqlite-journal

# Extensions (handled separately)
extensions/*/dist
